<header class="sticky-top">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to image_tag("logo2.png", class: "img_logo"), "#",
      class: "navbar-brand"%>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to t(".home"), "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t(".feature_film"), "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t(".series"), "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t(".new_film"), "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t(".hot_film"), "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= link_to t(".category"), "#", class: "nav-link dropdown-toggle",
            id: "navbardrop", data: {toggle: "dropdown"} %>
          <div class="dropdown-menu">
            <%= link_to t(".action"), "#", class: "dropdown-item" %>
            <%= link_to t(".love"), "#", class: "dropdown-item" %>
            <%= link_to t(".horror"), "#", class: "dropdown-item" %>
            <%= link_to t(".swordplay"), "#", class: "dropdown-item" %>
          </div>
        </li>
      </ul>
      <nav class="navbar navbar-light bg-light mr-auto">
        <%= form_tag "#", class: "form-inline" do %>
          <%= text_field_tag "search", "", class: "form-control mr-sm-2" %>
          <%= submit_tag t(".search"), 
            class: "btn btn-outline-success my-2 my-sm-0" %>
        <% end %>
      </nav>
      <% if user_signed_in? %>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <%= link_to "#{current_user.name}", "#",
            class: "nav-link dropdown-toggle",
            data: {toggle: "dropdown"} %>
          <div class="dropdown-menu dropdown-menu-right">
            <%= link_to t(".edit_profile"), edit_user_registration_path,
              class: "dropdown-item" %>
            <%= link_to t(".logout"), destroy_user_session_path,
              class: "dropdown-item", method: :delete %>
          </div>
        </li>
      </ul>
      <% else %>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to t(".login"), new_user_session_path,
            class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t(".sign_up"), new_user_registration_path,
            class: "nav-link" %>
        </li>
      </ul>
      <% end %>
    </div>
  </nav>
</header>
